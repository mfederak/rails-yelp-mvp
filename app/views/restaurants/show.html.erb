<div class="container">
<h1>Restaurant: <%= @restaurant.name %></h1>

</br>
<p>Address: <%= @restaurant.address %></p>
<p>Phone number: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category %></p>

</br>
<p>Reviews:</p>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li> <%= review.content %> </li>
    <p> Rating: <%= review.rating %> </p>
  <% end %>
</ul>

</br>
<% @review = Review.new %>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.error_notification %>

</div>

  <div class= "container form-inputs">
    <%= f.input :content %>
    <%= f.input :rating, collection: Review::RATING, prompt: "Choose a rating" %>
  </div>

  <div class="container form-actions">
    <%= f.submit "add a review", class: "btn btn-primary" %>
  </div>
<% end %>


</br>
<div class="container">
<p> <%= link_to 'Back', restaurants_path %> </p>
</div>
