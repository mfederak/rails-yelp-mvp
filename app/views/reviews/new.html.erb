<div class="container"> <h1>New Review</h1>
</div>
</br>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.error_notification %>

  <div class= "container form-inputs">
    <%= f.input :content %>
    <%= f.input :rating, collection: Review::RATING, prompt: "Choose a rating" %>
  </div>

  <div class="container form-actions">
    <%= f.submit "add a review", class: "btn btn-primary" %>
  </div>
<% end %>


</br>
<div class="container"> <%= link_to 'Back', restaurant_path(@restaurant) %> </div>

